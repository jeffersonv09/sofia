<div class="container" id="main-content">
  <% if(flash && flash.err){ %>
  <ul class="alert alert-success">
    <% Object.keys(flash.err).forEach(function(error){ %>
    <li><%- JSON.stringify(flash.err[error]) %></li>
    <% }) %>
  </ul>
  <% } %>
  <div class="row">
    <div class="col-sm-8 col-xs-12 col-sm-offset-2">
      <form class="form-horizontal formulario" role="form" action="crear" method="POST">
        <div class="row">
          <ul class="nav nav-tabs">
            <li id="tab-item" role="presentation" class="active">
              <a href="#">
                <img src="images/ico-light-blue-edit-line.png" width="32" class="img-responsive">
              </a>
            </li>
            <li id="tab-file" role="presentation">
              <a href="#">
                <img src="images/ico-light-blue-upload-folder.png" width="32" class="img-responsive">
              </a>
            </li>
            <li id="tab-image" role="presentation">
              <a href="#">
                <img src="images/ico-light-blue-picture.png" width="32" class="img-responsive">
              </a>
            </li>
          </ul>
        </div>
        <div class="form-body">
          <div class="control-group">
            <div class="input-container">
              <input type="input" name="txtPublicacionTitulo" id="txtPublicacionTitulo" value="<%= publicacion.publicacionTitulo %>" required="required"/>
              <label for="txtPublicacionTitulo">Titulo</label>
              <div class="bar"></div>
            </div>
          </div>
          <div id="tab-item-content">
            <div class="control-group">
              <textarea class="control" rows="14
              " id="txtPublicacionContenido" name="txtPublicacionContenido" placeholder="Escribe el contenido del artículo aquí"><%= publicacion.publicacionContenido %></textarea>
            </div>
          </div>
          <div id="tab-file-content">
            <div class="control-group">
              <textarea class="control" rows="14
              " id="txtPublicacionDescripcion" name="txtPublicacionDescripcion" placeholder="Escribe la descripción del artículo aquí"><%= publicacion.publicacionDescripcion %></textarea>
            </div>
            <div class="control-group">
              <div class="col-sm-2 col-sm-offset-2">
                <label id="fil-item-upload">Adjunta contenido</label>
                <label id="fil-item-image">Adjunta imagen</label>
              </div>
              <div class="col-sm-6">
                <span>
                  <input id="filPublicacionAdjunto1" name="filPublicacionAdjunto1" placeholder="Seleccionar archivo" disabled="disabled" />
                  <div class="fileUpload">
                    <span>Upload</span>
                    <input id="uploadBtn" type="file" class="upload" />
                  </div>
                </span>
              </div>
            </div>
          </div>
          <div class="control-group">
            <div class="input-container">
              <input type="input" name="txtPublicacionEtiqueta" id="txtPublicacionEtiqueta" required="required"/>
              <label for="txtPublicacionEtiqueta" value="<%= publicacion.publicacionEtiqueta %>">Etiquetas</label>
              <div class="bar"></div>
            </div>
          </div>
          <div class="control-group">
            <label id="fil-item-add-img" class="col-sm-2">
              Imagen
            </label>
            <label id="fil-item-add-file" class="col-sm-2">
              Archivo
            </label>
            <div class="col-sm-5 col-xs-12">
              <span>
                <input name="filPublicacionAdjunto2" id="filPublicacionAdjunto2" placeholder="Seleccionar archivo" disabled="disabled" />
                <div class="fileUpload">
                  <span>Upload</span>
                  <input id="uploadBtn" type="file" class="upload" />
                </div>
              </span>
            </div>
            <div class="control-group visible-xs-inline-block"></div>
            <div class="col-sm-5 col-xs-12">
              <div class="btn-group" role="group" aria-label="Difusión">
                <button type="button" class="btn btn-default" id="everyone">
                <img src="images/ico-light-blue-world.png" width="32" class="img-responsive">
                </button>
                <button type="button" class="btn btn-default" id="target">
                <img src="images/ico-light-blue-target.png" width="32" class="img-responsive">
                </button>
                <button type="button" class="btn btn-default" id="teamwork">
                <img src="images/ico-light-blue-teamwork.png" width="32" class="img-responsive">
                </button>
                <button type="button" class="btn btn-default" id="department">
                <img src="images/ico-light-blue-department.png" width="32" class="img-responsive">
                </button>
                <input type="hidden" name="hfPublicacionDifusion" id="hfPublicacionDifusion" value="<%= publicacion.publicacionDifusion %>">
              </div>
            </div>
          </div>
          <div class="control-group">
            <label for="selPublicacionArea" class="col-sm-2">Área</label>
            <div class="col-sm-4">
              <select class="control" id="selPublicacionArea" name="selPublicacionArea">
                <option value="1">Operaciones</option>
                <option value="2">Tecnologia</option>
                <option value="3">Administracion</option>
                <option value="4">Caslo</option>
              </select>
            </div>
            <label for="selPublicacionCategoria" class="col-sm-2">Categoría</label>
            <div class="col-sm-4">
              <select class="control" id="selPublicacionCategoria" name="selPublicacionCategoria">
                <option value="1">Herramientas</option>
                <option value="2">Capacitaciones</option>
                <option value="3">ISO</option>
                <option value="4">Guias</option>
              </select>
            </div>
          </div>
          <input type="hidden" name="hfPublicacionTipo" id="hfPublicacionTipo" value="<%= publicacion.publicacionTipo %>">
          <div class="control-group">
            <div class="button-container">
              <button type="submit"><span>Publicar</span></button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>